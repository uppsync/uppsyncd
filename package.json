		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"typescript": "^5.4.0",
		"@biomejs/biome": "^2.3.10",
		"@types/bun": "latest",
		"@goreleaser/nfpm": "^2.44.1",
		"@aws-sdk/client-s3": "^3.958.0",
		"@types/mime-types": "^3.0.1",
		"mime-types": "^3.0.2"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"cac": "^6.7.14",
		"semver": "^7.7.3",
		"systeminformation": "^5.28.3"

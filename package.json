{
	"name": "uppsyncd",
	"version": "0.0.1",
	"bin": {
		"uppsyncd": "./dist/uppsyncd"
	},
	"scripts": {
		"build": "bun run scripts/build.ts",
		"pack:fpm": "bun run scripts/pack-fpm.ts",
		"pack:msi": "bun run scripts/pack-msi.ts",
		"pack:pkg": "bun run scripts/pack-pkg.ts",
		"repo:deb": "bun run scripts/repo-deb.ts",
		"repo:rpm": "bun run scripts/repo-rpm.ts",
		"setup:gpg": "bun run scripts/setup-gpg.ts",
		"publish": "bun run scripts/publish.ts",
